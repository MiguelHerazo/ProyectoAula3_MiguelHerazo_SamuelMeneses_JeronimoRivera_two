@model Tuple<string, List<string>>  // El modelo es un Tuple que contiene el nombre de la idea y la lista de integrantes

@{
    ViewBag.Title = "Idea de Negocio con Mayor Cantidad de Herramientas 4RI";
}

<h2>Idea de Negocio con Mayor Cantidad de Herramientas 4RI</h2>

@if (Model != null)
{
    <p>La idea de negocio con mayor cantidad de herramientas 4RI es: <strong>@Model.Item1</strong></p>

    <h3>Integrantes del Equipo</h3>
    <ul>
        @foreach (var integrante in Model.Item2)
        {
            <li>@integrante</li>
        }
    </ul>
}
else
{
    <p>No se encontraron datos para mostrar.</p>
}

@Html.ActionLink("Volver a la lista de ideas de negocio", "Index")

