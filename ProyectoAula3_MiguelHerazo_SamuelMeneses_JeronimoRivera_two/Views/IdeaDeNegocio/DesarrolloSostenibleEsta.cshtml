@model List<IdeaDeNegocio>

@{
    ViewBag.Title = "Ideas de Negocio con Desarrollo Sostenible";
}

<h2>Ideas de Negocio con Desarrollo Sostenible</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Impacto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var idea in Model)
            {
                <tr>
                    <td>@idea.Nombre</td>
                    <td>@idea.Impacto</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron ideas de negocio con "Desarrollo sostenible" en su impacto.</p>
}
